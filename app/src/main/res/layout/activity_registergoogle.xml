<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".registergoogle">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_background"
        tools:layout_editor_absoluteX="0dp" />


    <TextView
        android:id="@+id/reggoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        android:fontFamily="@font/goldropspersonaluseregular9ynn5"
        android:gravity="center"
        android:padding="7dp"
        android:text="REGISTER USING GOOGLE"
        android:textColor="@color/green"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/customersignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/registerpagesroundedborder"
        android:fontFamily="sans-serif-condensed"
        android:text="Sign Up As Customer"
        android:textColor="@color/green"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/reggoogle"
        tools:layout_editor_absoluteX="49dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/houseownersignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/registerpagesroundedborder"
        android:fontFamily="sans-serif-condensed"
        android:text="Sign Up As HouseOwner"
        android:textColor="@color/green"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/customersignup"
        tools:layout_editor_absoluteX="49dp" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="576dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bottom_background"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>