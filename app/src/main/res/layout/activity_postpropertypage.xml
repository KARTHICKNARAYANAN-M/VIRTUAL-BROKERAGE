<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:color="@color/white"
    android:background="#fff
"
    tools:context=".postpropertypage">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-247dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/loginroundborder"
            android:layout_marginTop="25dp"
            android:paddingBottom="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/goldropspersonaluseregular9ynn5"
                android:gravity="center"
                android:text="Enter Your Details"
                android:textColor="#56baed"
                android:textSize="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="95dp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/registerpagesroundedborder"
                android:drawableLeft="@drawable/baseline_person_24green"
                android:fontFamily="sans-serif-condensed"
                android:hint="Enter Your Name"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/green"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/details"
                tools:layout_editor_absoluteX="30dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/registerpagesroundedborder"
                android:drawableLeft="@drawable/baseline_email_24"
                android:fontFamily="sans-serif-condensed"
                android:hint="Enter Your Email"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/green"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/name"
                tools:layout_editor_absoluteX="0dp" />

            <EditText
                android:id="@+id/phoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/registerpagesroundedborder"
                android:drawableLeft="@drawable/baseline_local_phone_24"
                android:fontFamily="sans-serif-condensed"
                android:hint="Enter Your PhoneNo"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/green"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/email" />

            <EditText
                android:id="@+id/whatsappno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/registerpagesroundedborder"
                android:drawableLeft="@drawable/baseline_local_phone_24"
                android:fontFamily="sans-serif-condensed"
                android:hint="Enter Your WhatsappNo"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/green"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/phoneno" />

            <TextView
                android:id="@+id/photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="8dp"
                android:text="Add Photos "
                android:textColor="@color/green"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/whatsappno" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/uploadphotos"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/roundedborderslogin"
                android:fontFamily="sans-serif-condensed"
                android:padding="5dp"
                android:text="Add your Photos\n Of Your House"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/photos"
                tools:layout_editor_absoluteX="107dp" />



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/gallery_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:padding="20dp"
                android:scrollbarStyle="outsideInset"
                android:layout_marginStart="20dp"
                android:scrollbars="vertical"
                android:tag="vertixl"
                app:layout_constraintTop_toBottomOf="@+id/uploadphotos"
                tools:layout_editor_absoluteX="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/upload"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/roundedborderslogin"
                android:fontFamily="sans-serif-condensed"
                android:padding="2dp"
                android:textSize="15dp"
                android:text="Upload Photos"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gallery_images"
                tools:layout_editor_absoluteX="107dp" />



            <TextView
                android:id="@+id/preferred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Preferred Family Type"
                android:textColor="@color/green"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/upload" />


            <RadioGroup
                android:id="@+id/selectfamilytype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/loginroundborder"
                android:fontFamily="sans-serif-condensed"
                android:orientation="horizontal"
                android:padding="7dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/preferred"
                tools:layout_editor_absoluteX="0dp">

                <RadioButton
                    android:id="@+id/Family"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="7dp"
                    android:text="Family"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>

                <RadioButton
                    android:id="@+id/Bachelor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="0dp"
                    android:paddingLeft="7dp"
                    android:text="Bachelor"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>
            </RadioGroup>

            <TextView
                android:id="@+id/housetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Select House Type"
                android:textColor="@color/green"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selectfamilytype" />

            <RadioGroup
                android:id="@+id/selecthousetype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/loginroundborder"
                android:fontFamily="sans-serif-condensed"
                android:orientation="horizontal"
                android:padding="7dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/housetype"
                tools:layout_editor_absoluteX="0dp">

                <RadioButton
                    android:id="@+id/Apartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="3dp"
                    android:text="Apartment"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>

                <RadioButton
                    android:id="@+id/Independenthouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="3dp"
                    android:paddingLeft="7dp"
                    android:text="IndependentHouse"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>
            </RadioGroup>

            <TextView
                android:id="@+id/furnituretype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Select Furniture Type"
                android:layout_marginStart="20dp"
                android:textColor="@color/green"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selecthousetype" />


            <RadioGroup
                android:id="@+id/selectfurnituretype"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/loginroundborder"
                android:fontFamily="sans-serif-condensed"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:padding="7dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/furnituretype">

                <RadioButton
                    android:id="@+id/Furnished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="3dp"
                    android:text="Furnished"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/SemiFurnished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:padding="3dp"
                    android:paddingLeft="7dp"
                    android:layout_marginStart="20dp"
                    android:text="SemiFurnished"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>

                <RadioButton
                    android:id="@+id/NotFurnished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:padding="2dp"
                    android:layout_marginStart="20dp"
                    android:text="Not Furnished"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>
            </RadioGroup>


            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/registerpagesroundedborder"
                android:drawableLeft="@drawable/baseline_home_24"
                android:fontFamily="sans-serif-condensed"
                android:hint="Enter Address"
                android:padding="8dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/black"
                android:textColorHint="@color/green"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/selectfurnituretype"
                tools:layout_editor_absoluteX="30dp" />

            <EditText
                android:id="@+id/area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/registerpagesroundedborder"
                android:drawableLeft="@drawable/baseline_home_24"
                android:fontFamily="sans-serif-condensed"
                android:hint="Enter Area"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/green"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/address"
                tools:layout_editor_absoluteX="30dp" />

            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/registerpagesroundedborder"
                android:drawableLeft="@drawable/baseline_location_city_24"
                android:fontFamily="sans-serif-condensed"
                android:hint="Enter City"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/green"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/area"
                tools:layout_editor_absoluteX="30dp" />

            <EditText
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/registerpagesroundedborder"
                android:drawableLeft="@drawable/baseline_location_city_24"
                android:fontFamily="sans-serif-condensed"
                android:hint="Enter State"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/green"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/city"
                tools:layout_editor_absoluteX="30dp" />

            <TextView
                android:id="@+id/advance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Advance"
                android:textColor="@color/green"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/state" />

            <EditText
                android:id="@+id/advanceamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/registerpagesroundedborder"
                android:drawableLeft="@drawable/baseline_currency_rupee_24"
                android:fontFamily="sans-serif-condensed"
                android:hint="Enter Advance Amount"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/green"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/advance"
                tools:layout_editor_absoluteX="30dp" />

            <TextView
                android:id="@+id/Rentamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Rent Amount"
                android:textColor="@color/green"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/advanceamount" />


            <EditText
                android:id="@+id/rentfee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="10dp"
                android:hint="Enter Rent Amount"
                android:textColor="@color/black"
                android:textColorHint="@color/green"
                android:background="@drawable/registerpagesroundedborder"
                android:fontFamily="sans-serif-condensed"
                android:orientation="vertical"
                android:padding="7dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Rentamount"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/post"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="88dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/roundedborderslogin"
                android:fontFamily="@font/goldropspersonaluseregular9ynn5"
                android:padding="5dp"
                android:text="post"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rentfee" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>