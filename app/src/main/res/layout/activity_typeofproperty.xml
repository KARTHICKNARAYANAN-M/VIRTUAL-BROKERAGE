<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".typeofproperty">



    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_background"
        tools:layout_editor_absoluteX="16dp" />

      <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
          android:padding="30dp"
          android:layout_marginStart="15dp"
          android:layout_marginEnd="15dp"
          android:layout_marginTop="30dp"
          android:background="@drawable/registerpagesroundedborder"
          app:layout_constraintTop_toBottomOf="@+id/imageView3"
          android:orientation="vertical">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/black"
              android:text="Property Type"
              android:textSize="25dp"
              android:gravity="center"
              android:layout_marginStart="55dp"
              android:fontFamily="@font/goldropspersonaluseregular9ynn5"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/rent"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/registerpagesroundedborder"
        android:fontFamily="@font/goldropspersonaluseregular9ynn5"
        android:padding="10dp"
        android:text="FOR RENT"
        android:textColor="@color/green"
        android:textSize="20dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sale"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/registerpagesroundedborder"
        android:fontFamily="@font/goldropspersonaluseregular9ynn5"
        android:padding="10dp"
        android:text="FOR SALE"
        android:textColor="@color/green"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rent" />

</LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="564dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bottom_background"
        tools:layout_editor_absoluteX="48dp" />


</androidx.constraintlayout.widget.ConstraintLayout>