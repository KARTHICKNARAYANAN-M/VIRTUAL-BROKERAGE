<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ExtraText"
    android:background="@android:color/background_light"
    >



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:id="@+id/signin"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:gravity="center"
        android:padding="5dp"
        android:background="@drawable/loginroundborder"
        android:text="Login/Sign in"
        android:textSize="25dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/green"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:id="@+id/HouseOwnerLogin"
        android:layout_below="@+id/signin"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/loginroundborder"
        android:text="HouseOwner Login"
        android:textSize="25dp"
        android:fontFamily="@font/goldropspersonaluseregular9ynn5"
        android:textColor="@color/green"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/typeemail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/HouseOwnerLogin"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:text="Emailaddress"
        android:textColor="@color/green"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp"
        android:textStyle="bold"
        />






    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/typeemail"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/registerpagesroundedborder"
        android:drawableLeft="@drawable/baseline_email_24"
        android:hint="Email Address"
        android:textColorHint="@color/green"
        android:fontFamily="sans-serif-condensed"
        android:padding="7dp"
        android:textColor="#050607"
        android:textSize="22dp"


        />

    <TextView
        android:id="@+id/typepassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:text="Password"
        android:textColor="@color/green"
        android:textSize="20dp"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/typepassword"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:drawableLeft="@drawable/baseline_password_24"
        android:hint="Password"
        android:background="@drawable/registerpagesroundedborder"
        android:padding="7dp"
        android:textColor="@color/black"
        android:textColorHint="@color/green"
        android:textSize="22dp"
        android:inputType="textPassword"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginbutton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="85dp"
        android:text="LOGIN"
       android:background="@drawable/roundedborderslogin"
        android:textColor="@color/white"
        android:fontFamily="monospace"
        android:textSize="22dp"
        android:padding="7dp"
        />

    <TextView
        android:id="@+id/forgotpassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginbutton"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:text="Forgot Password"
        android:fontFamily="sans-serif-black"
        android:textSize="20dp"

        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:id="@+id/or"
        android:layout_below="@id/forgotpassword"
        android:layout_centerHorizontal="true"
        android:text="OR"
        android:textSize="25dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#499DCC"
        />


    <TextView
        android:id="@+id/signinwith"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/or"
        android:text="--------Sign In With---------"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textColor="#56baed"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed-medium"
        android:padding="5dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signinwith"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/others" >


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signwithgoogle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/registerpagesroundedborder"
            android:drawableLeft="@drawable/google"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="7dp"
            android:text="Google"
            android:textColor="@color/green"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signwithfacebook"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/facebook"
            android:layout_marginTop="10dp"
            android:padding="7dp"
            android:text="Facebook"
            android:textSize="20dp"
            android:textColor="@color/green"
            android:background="@drawable/registerpagesroundedborder"
            android:fontFamily="sans-serif-condensed-medium"/>








    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_below="@+id/others"
        android:layout_marginTop="-38dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bottom_background" />

</RelativeLayout>